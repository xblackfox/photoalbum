<div class="col-md-8 col-md-offset-2">
	<h1>Edit Album</h1>

	<%= form_for @album, html: {multipart: true}, url: album_path do |f| %>


	<% if @album.errors.any? %>
		<div id="errors"> 
			<h2> <%= pluralize(@album.errors.count, "error") %> prevented this album from saving </h2> 
			<ul> <% @album.errors.full_messages.each do |msg| %>
				<li> <%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>


	  <p>
	    <%= f.label :title %><br>
	    <%= f.text_field :title %>
	  </p>
	 
	  <p>
	    <%= f.label :description %><br>
	    <%= f.text_area :description %>
	    <%= f.file_field :avatar %>
	  </p>
	 
	  <p>
	    <%= f.submit %>
	  </p>
	<% end %>
	<br>
	<br>

	<%= link_to 'Back', albums_path, class: 'btn btn-success btn-lg' %>

</div>