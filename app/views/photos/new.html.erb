<div class="col-md-8 col-md-offset-2">
	<div class="row">
		<div class="panel panel-default">
			<div class="panel-heading">


				<h1>Add New Photo</h1>

			<!-- form start -->	
				<%= simple_form_for @photo, html: {multipart: true}, url: album_photos_path do |f|  %>
					<% if @photo.errors.any? %>
						<div id="errors">
							<h2> <%= pluralize(@photo.errors.count, "error") %> prevented this Photo from saving </h2>
							<ul> <% @photo.errors.full_messages.each do |msg| %>
								<li> <%= msg %></li>
								<% end %>
							</ul>
						</div>
					<% end %>



					<%= f.input :title, input_html: {class:'form-control' }  %>
					<%= f.input :description, input_html: {class:'form-control' }  %>



				<!-- START carrierwave photo upload via remote URL-->
				  <p>
				    <!--label>Photo URL:</label-->
				    <!--%= image_tag(@photo.avatar_url) if @photo.avatar? %-->
				    <!--%= f.text_field :remote_avatar_url %-->
						<%= f.file_field :avatar %>
				  </p>
				<!-- START carrierwave photo upload via remote URL-->


					<%= f.button :submit, class: "btn btn-info" %>

				<% end %>
			<!-- form end -->	

				

				<%= link_to 'Back', root_path %>

			</div>
		</div>
	</div>
</div>
