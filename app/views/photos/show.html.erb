<h1> <%= @photo.title %> </h1>

<p><%= image_tag(@photo.avatar.thumb.url, alt: 'Image', class: "photo-show") if @photo.avatar? %></p>
<p> <%= @photo.description %></p>

<br><br>

		<button type="button" class="btn btn-info ">
			<%= link_to "Back", root_path %>
		</button>


		<% if user_signed_in? %> 
			<% if @album.user_id == current_user.id %> 
			<button type="button" class="btn btn-warning">
				<%= link_to "Edit", edit_album_photo_path(album_id: @album.id, id: @photo.id) %>
			</button>
			<button type="button" class="btn btn-info">
				<%= link_to "Delete", album_photo_path(album_id: @album.id, id: @photo.id), method: :delete,
				data: {confirm: "Are you sure?"}%>
			</button>
			<% end %>
		<% end %>



<div class="row">
	<div class="col-md-12">
		 <div class="reviews">
		 	<h1>Comments</h1>
		 		<div>
		 			<%= link_to "Click to add Comment", new_album_photo_comment_path(@album, @photo), class: "btn btn-default" %>
		 		</div>

		 		<%= render @photo.comments %>
		 		
		 </div>
	</div>
</div>